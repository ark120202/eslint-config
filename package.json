{
  "name": "@ark120202/eslint-config",
  "version": "1.0.0",
  "description": "ESLint config for ark120202",
  "repository": "https://github.com/ark120202/eslint-config",
  "license": "MIT",
  "author": "ark120202",
  "files": [
    "**/*.js"
  ],
  "scripts": {
    "lint": "run-s lint:prettier lint:eslint lint:tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check **/*.{js,json,yml,md}",
    "lint:tsc": "tsc"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "./bases/base.js",
      "./bases/node.js"
    ],
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "rules": {
      "unicorn/filename-case": "off"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.12.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^9.1.1"
  },
  "devDependencies": {
    "@ark120202/typescript-config": "^2.1.0",
    "@types/eslint": "^4.16.6",
    "@types/node": "^12.6.8",
    "eslint": "^5.16.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-eslint-plugin": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    }
  }
}
